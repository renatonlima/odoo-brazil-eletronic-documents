<?xml version="1.0" encoding="UTF-8"?>
<!-- vim:fdl=1:
-->

<templates id="template" xml:space="preserve">
    <t t-extend="PosTicket">
        <t t-jquery=".pos-sale-ticket" t-operation="append">
            <div>---teste-nfce---</div>
            <div>
                <t t-if="order.chNFe">
                    chNFe:
                    <t t-esc="order.chNFe"></t>
                </t>
            </div>
            <div>
                <t t-if="order.get_qtItens()">
                    qntItens:
                    <t t-esc="order.get_qtItens()"></t>
                </t>
            </div>
            <div>
                vTribTotal:
                <t t-if="order.get_vTribTotal()">
                    <t t-esc="widget.format_currency(order.get_vTribTotal())"></t>
                </t>
            </div>
            <div>
                <t t-if="order.tpAmb">
                    tpAmb:
                    <t t-esc="order.tpAmb"></t>
                </t>
            </div>
            <div>
                <t t-if="order.legal_name">
                    legal_name:
                    <t t-esc="order.legal_name"></t>
                </t>
            </div>
            <div>
                <t t-if="order.contact_address">
                    endereco:
                    <t t-esc="order.contact_address"></t>
                </t>
            </div>
            <div>
                <t t-if="order.inscr_mun">
                    inscr mun:
                    <t t-esc="order.inscr_mun"></t>
                </t>
            </div>
             <div>
                <t t-if="order.inscr_est">
                    inscr est:
                    <t t-esc="order.inscr_est"></t>
                </t>
            </div>
             <div>
                <t t-if="order.cnpj">
                    cnpj:
                    <t t-esc="order.cnpj"></t>
                </t>
            </div>
            <div>
                <t t-if="order.company_street">
                    company_street:
                    <t t-esc="order.company_street"></t>
                </t>
            </div><div>
                <t t-if="order.company_street2">
                    company_street2:
                    <t t-esc="order.company_street2"></t>
                </t>
            </div><div>
                <t t-if="order.company_number">
                    company_number:
                    <t t-esc="order.company_number"></t>
                </t>
            </div><div>
                <t t-if="order.company_city">
                    company_city:
                    <t t-esc="order.company_city"></t>
                </t>
            </div><div>
                <t t-if="order.company_district">
                    company_district:
                    <t t-esc="order.company_district"></t>
                </t>
            </div><div>
                <t t-if="order.company_zip">
                    company_zip:
                    <t t-esc="order.company_zip"></t>
                </t>
            </div><div>
                <t t-if="order.company_state">
                    company_state:
                    <t t-esc="order.company_state"></t>
                </t>
            </div>

        </t>
    </t>

    <t t-extend="XmlReceipt">
         <t t-jquery="receipt" t-operation="replace">
            <receipt class="pos-sale-ticket" align='center' width='40'
                     value-thousands-separator='' >

                <div font='b' id="areaI">
                    <left>
                        <t t-if='receipt.company.logo'>
                            <img t-att-src='receipt.company.logo' />
                            <br/>
                        </t>
                        <t t-if='!receipt.company.logo'>
                            <h1><t t-esc='receipt.company.name' /></h1>
                            <br/>
                        </t>
                        <t t-if="receipt.company.legal_name">
                            <div><t t-esc="receipt.company.legal_name"/></div>
                        </t>
                        <t t-if="receipt.company.cnpj">
                            <div><t t-esc="receipt.company.cnpj"/></div>
                        </t>
                    </left>
                    <right>
                        <t t-if="receipt.company.inscr_mun">
                            <t t-esc="receipt.company.inscr_mun"/>
                            <br/>
                        </t>
                        <t t-if="receipt.company.inscr_est">
                            <t t-esc="receipt.company.inscr_est"/>
                            <br/>
                        </t>
                    </right>
                    <div>
                        <t t-if="receipt.company.address">
                            <t t-esc="receipt.company.address" />
                        </t>
                    </div>
                </div>
                <br />

                <div align="center">----------</div>
                <div id="areaII">
                    <div align="center">DANFE NFC-e - Documento Auxiliar</div>
                    <div align="center">da Nota Fiscal de Consumidor Eletrônica</div>
                    <div align="center"><b>Não permite aproveitamento de crédito ICMS</b></div>
                    <br/><br/>
                </div>

                <div id="areaIII" line-ratio='0.6'>
                    <t t-foreach='receipt.orderlines' t-as='line'>
                        <t t-set='simple' t-value='line.discount === 0 and line.unit_name === "Unit(s)" and line.quantity === 1' />
                        <t t-if='simple'>
                            <line>
                                <left><t t-esc='line.product_name' /></left>
                                <right><value><t t-esc='line.price_display' /></value></right>
                                <br/>
                            </line>
                        </t>
                        <t t-if='!simple'>
                            <line><left><t t-esc='line.product_name' /></left></line>
                            <t t-if='line.discount !== 0'>
                                <line indent='1'><left>Discount: <t t-esc='line.discount' />%</left></line>
                            </t>
                            <line indent='1'>
                                <left>
                                    <value value-decimals='3' value-autoint='on'>
                                        <t t-esc='line.quantity' />
                                    </value>
                                    <t t-if='line.unit_name !== "Unit(s)"'>
                                        <t t-esc='line.unit_name' />
                                    </t>
                                    x
                                    <value value-decimals='2' value-autoint='on'>
                                        <t t-esc='line.price' />
                                    </value>
                                </left>
                                <right>
                                    <value value-decimals="2" value-autoint="on"><t t-esc='line.price_display' /></value>
                                </right>
                                <br/>
                            </line>
                        </t>
                    </t>
                </div>

                <div id="areaIV">
                    <br/>
                    <left>Quantidade Total de Itens</left>
                    <t t-if="receipt.qtItens">
                        <right>
                            <t t-esc="receipt.qtItens"></t>
                        </right>
                    </t>
                    <line size='double-height'>
                        <br/>
                        <!--<left><pre>   -->     TOTAL<!--</pre></left> -->
                        <right><value value-autoint="on" value-decimals="2"><t t-esc='receipt.total_with_tax' /></value></right>
                    </line>
                    <div line-ratio="0.5"><left>FORMA DE PAGAMENTO</left>     <right>Valor Pago</right></div>

                    <t t-foreach='receipt.paymentlines' t-as='line'>
                    <line>
                        <left><t align="left" t-esc='line.journal' /></left>
                        <right><value value-autoint="on" value-decimals="2"><t align="right" t-esc='line.amount'/></value></right>
                        <br/>
                    </line>

                </t>
                </div>

                <div id="areaV">
                    <div align="left">Informação dos Tributos Totais Incidentes (Lei Federal 12.741/2012)</div>
                    <div align="right">
                        <t t-esc="receipt.total_tax"></t>
                    </div>
                </div>

                <div id="areaVa">
                    <t t-if="receipt.infCpl">
                        <t t-esc="receipt.infCpl"/>
                    </t>
                </div>


                <div id="areaVI">
                    <br/>
                    <t t-if="receipt.mensagemFiscal">
                        <t t-esc="receipt.mensagemFiscal"/>
                    </t>
                    <br/>
                    <t t-if="receipt.internal_number">
                        <t t-esc="receipt.internal_number"/>
                    </t>
                    <br/>
                    <t t-if="receipt.serie_nfce">
                        <t t-esc="receipt.serie_nfce"/>
                    </t>
                    <br/>
                    <t t-if="receipt.dhEmi">
                        Emissão
                        <t t-esc="receipt.dhEmi"/>
                    </t>
                    <br/>
                    <t t-if="receipt.via">
                        - <t t-esc="receipt.via" />
                    </t>
                    <br/>
                    Consulte pela Chave de Acesso em <t t-if="receipt.endEletronico">
                        <t t-esc="receipt.endEletronico" />
                    </t>
                    <br/>
                    <t t-if="receipt.chNFe" align="center">
                        CHAVE DE ACESSO
                        <br/>
                        <t t-esc="receipt.chNFe" />
                    </t>
                </div>

                <div id="areaVII"></div>

                <div id="areaVIII"></div>
                <br/>
                <br/>
                <t t-set='taxincluded' t-value='Math.abs(receipt.subtotal - receipt.total_with_tax) &lt;= 0.000001' />
                <t t-if='!taxincluded'>
                    <line><right>--------</right></line>
                    <line><left>Subtotal</left><right> <value value-autoint="on" value-decimals="2"><t t-esc="receipt.subtotal" /></value></right><br/></line>
                    <t t-foreach='receipt.tax_details' t-as='tax'>
                        <line>
                            <left><t t-esc='tax.name' /></left>
                            <right><value value-autoint="on" value-decimals="2"><t t-esc='tax.amount' /></value></right>
                            <br/>
                        </line>
                    </t>
                </t>

                <line size='double-height'>
                    <left><pre>        CHANGE</pre></left>
                    <right><value value-autoint="on" value-decimals="2"><t t-esc='receipt.change' /></value></right>
                </line>
                <br/>

                <!-- Extra Payment Info -->

                <t t-if='receipt.total_discount'>
                    <line>
                        <left>Discounts</left>
                        <right><value value-autoint="on" value-decimals="2"><t t-esc='receipt.total_discount'/></value></right>
                    </line>
                </t>
                <t t-if='taxincluded'>
                    <t t-foreach='receipt.tax_details' t-as='tax'>
                        <line>
                            <left><t t-esc='tax.name' /></left>
                            <right><value value-decimals="2" value-autoint="on"><t t-esc='tax.amount' /></value></right>
                            <br/>
                        </line>
                    </t>
                </t>

                <!-- Footer -->
                <t t-if='receipt.footer'>
                    <br/>
                    <pre><t t-esc='receipt.footer' /></pre>
                    <br/>
                    <br/>
                </t>

                <br/>
                <div font='b'>
                    <div><t t-esc='receipt.name' /></div>
                    <div><t t-esc='receipt.date.localestring' /></div>
                </div>

            </receipt>
        </t>
    </t>
</templates>
